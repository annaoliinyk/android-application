<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".java.PositionScreen">

    <TextView
        android:id="@+id/textEditTitle"
        android:layout_width="294dp"
        android:layout_height="48dp"
        android:text="@string/position_name"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.087"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textViewPositionInText"
        android:layout_width="162dp"
        android:layout_height="37dp"
        android:scrollbarSize="12dp"
        android:text="@string/position_in"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/TextEditRequirementsToEmployee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.128"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textEditTitle"
        app:layout_constraintVertical_bias="0.111"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/textViewPositionInCity"
        android:layout_width="76dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:scrollbarSize="12dp"
        android:text="@string/city"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/imageViewCompanyLogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.716"
        app:layout_constraintStart_toEndOf="@+id/textViewPositionInText"
        app:layout_constraintTop_toBottomOf="@+id/textEditTitle"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textViewCompanyNameText"
        android:layout_width="225dp"
        android:layout_height="29dp"
        android:scrollbarSize="12dp"
        android:text="@string/company_name"
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewTheWholeMessage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.193"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textEditTitle"
        app:layout_constraintVertical_bias="0.352"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textViewCompanyName"
        android:layout_width="134dp"
        android:layout_height="39dp"
        android:scrollbarSize="12dp"
        android:text="@string/company"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="212dp" />

    <TextView
        android:id="@+id/textViewTheWholeMessage"
        android:layout_width="348dp"
        android:layout_height="274dp"
        android:background="#FFF"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/buttonApply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextEditRequirementsToEmployee"
        app:layout_constraintVertical_bias="0.219"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonApply"
        android:layout_width="160dp"
        android:layout_height="55dp"
        android:background="#995A5656"
        android:gravity='center'
        android:text="@string/apply"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.921"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/TextEditRequirementsToEmployee"
        android:layout_width="344dp"
        android:layout_height="39dp"
        android:text="@string/requirements_to_employee"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonApply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textEditTitle"
        app:layout_constraintVertical_bias="0.353"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageViewCompanyLogo"
        android:layout_width="71dp"
        android:layout_height="61dp"
        android:layout_marginTop="94dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toEndOf="@+id/textViewCompanyName"
        app:layout_constraintTop_toBottomOf="@+id/textEditTitle"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@tools:sample/avatars"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>