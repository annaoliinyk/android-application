<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@android:style/Theme.NoTitleBar"
    tools:context=".java.CreateAccount"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="223dp"
        android:layout_height="38dp"
        android:text="@string/account_type"
        android:textColor="#FFFF"
        android:textSize="22sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="43dp" />

    <Spinner
        android:id="@+id/setAccountType"
        android:layout_width="257dp"
        android:layout_height="40dp"
        android:background="#504A4A"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.266"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.117"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editTextEnterAddressee"
        android:layout_width="320dp"
        android:layout_height="75dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="@string/enter_email"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColorHint="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonCreateAccount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setAccountType"
        app:layout_constraintVertical_bias="0.162"
        android:autofillHints="" />

    <EditText
        android:id="@+id/EditTextEnterPassword"
        android:layout_width="320dp"
        android:layout_height="75dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="@string/enter_password"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColorHint="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonCreateAccount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setAccountType"
        android:autofillHints=""
        tools:ignore="TextFields" />

    <EditText
        android:id="@+id/EditTextReenterPassword"
        android:layout_width="320dp"
        android:layout_height="75dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="@string/verify_password"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColorHint="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonCreateAccount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setAccountType"
        app:layout_constraintVertical_bias="0.832"
        tools:ignore="TextFields"
        android:autofillHints="" />

    <Button
        android:id="@+id/buttonCreateAccount"
        android:layout_width="258dp"
        android:layout_height="71dp"
        android:background="#995A5656"
        android:text="@string/create_account"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.884" />

</androidx.constraintlayout.widget.ConstraintLayout>
