<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".java.ApplicationScreen">

    <TextView
        android:id="@+id/textEditTitle"
        android:layout_width="301dp"
        android:layout_height="59dp"
        android:text="@string/apply_for_position"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.058"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textViewMessageToEmployer"
        android:layout_width="331dp"
        android:layout_height="41dp"
        android:layout_marginTop="30dp"
        android:scrollbarSize="12dp"
        android:text="@string/your_message_to_employer"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewTheWholeMessage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textEditTitle"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/textViewTheWholeMessage"
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:background="#FFF"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/buttonApply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textEditTitle"
        app:layout_constraintVertical_bias="0.664"
        tools:ignore="LabelFor,MissingConstraints"
        android:autofillHints=""
        android:inputType="text" />

    <Button
        android:id="@+id/buttonApply"
        android:layout_width="160dp"
        android:layout_height="55dp"
        android:background="#995A5656"
        android:gravity='center'
        android:text="@string/apply"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.917"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>